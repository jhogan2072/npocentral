<%= simple_form_for([:employee, @account], :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description, input_html: { rows: 3 } %>
    <%= f.input :domain, :wrapper => :append  do %>
        <%= f.input_field :domain %>
        <span class="add-on">.<%= APP_CONFIG['base_domain'] %></span>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>