<%= simple_form_for(@auction, url: pathVar, method: methodVar) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :event_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>