<% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <div class="alert<%= msg.length > 100 ? ' alert-block' : '' %><%= name == 'alert'? '': flash_class(name) %>">
          <a class="close" data-dismiss="alert">&#215;</a>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        </div>
    <% end %>
<% end %>
